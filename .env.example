# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,auth.oneclickmed.ng,.vercel.app
ENVIRONMENT=production

# Backend URL (used in email templates and success pages)
BACKEND_URL=https://auth.oneclickmed.ng

# Database (SQLite for simplicity - minimal storage needed)
DATABASE_URL=sqlite:///db.sqlite3

# CORS Settings (Production domains - localhost/127.0.0.1 on any port allowed by default via regex)
CORS_ALLOWED_ORIGINS=https://oneclickmed.ng,https://www.oneclickmed.ng,https://auth.oneclickmed.ng

# Brevo API
BREVO_API_KEY=your-brevo-api-key-here
BREVO_SENDER_EMAIL=noreply@yourcompany.com
BREVO_SENDER_NAME=OCM Services

# Firebase Admin SDK - Test Environment
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_TEST_TYPE=service_account
FIREBASE_TEST_PROJECT_ID=your-test-project-id
FIREBASE_TEST_PRIVATE_KEY_ID=your-test-private-key-id
FIREBASE_TEST_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
FIREBASE_TEST_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-test-project.iam.gserviceaccount.com
FIREBASE_TEST_CLIENT_ID=your-test-client-id
FIREBASE_TEST_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TEST_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_TEST_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_TEST_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-test-project.iam.gserviceaccount.com

# Firebase Admin SDK - Production Environment
FIREBASE_PROD_TYPE=service_account
FIREBASE_PROD_PROJECT_ID=your-prod-project-id
FIREBASE_PROD_PRIVATE_KEY_ID=your-prod-private-key-id
FIREBASE_PROD_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
FIREBASE_PROD_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-prod-project.iam.gserviceaccount.com
FIREBASE_PROD_CLIENT_ID=your-prod-client-id
FIREBASE_PROD_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_PROD_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_PROD_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_PROD_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-prod-project.iam.gserviceaccount.com

# Product Configurations
# Note: Tokens are generated automatically when you run: python manage.py populate_products

# Beta Health
BETA_HEALTH_TEST_TENANT_ID=beta-health-test-tenant-id
BETA_HEALTH_PROD_TENANT_ID=beta-health-prod-tenant-id

# EHR
EHR_TEST_TENANT_ID=ehr-test-tenant-id
EHR_PROD_TENANT_ID=ehr-prod-tenant-id

# Emergency Service
EMERGENCY_SERVICE_TEST_TENANT_ID=emergency-service-test-tenant-id
EMERGENCY_SERVICE_PROD_TENANT_ID=emergency-service-prod-tenant-id

# HubSpot CRM (Beta Health only)
HUBSPOT_API_KEY=your-hubspot-api-key-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60/minute
RATE_LIMIT_PER_HOUR=1000/hour

# Logging
LOG_LEVEL=INFO
